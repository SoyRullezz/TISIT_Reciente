@model List<CAS_1._1._1.Models.predios>
@{
    ViewBag.Title = "Destajos Materiales";
    Layout = "~/Views/Shared/_Layout3.cshtml";


}

<style>
    td {
        padding: 10px;
    }

    input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-left: 5px;
        vertical-align: middle;
    }

    .selec:hover {
        cursor: pointer;
    }

    #div1 {
        overflow: scroll;
        height: 100%;
        width: 100%;
    }

        #div1 table {
            width: 100%;
            background-color: lightgray;
        }
</style>
<h2>Listado</h2>
<div class="alert alert-@ViewBag.alerta"><b>@ViewBag.res</b></div>

@*---------------------- Destajo general----------------------------*@

<br />
<div id="div1">
    <table id="table_predios_g" class="table table-bordered">
        <thead style="background-color: #2A3F54; color: white">
            <tr>
                <th>#Predio</th>
                <th>Predio</th>
                <th>Calle</th>
                <th>Colonia</th>
                <th>Municipio</th>
                <th style="text-align: center">Opciones</th>
            </tr>
        </thead>
        <tbody style="background-color: white" id="tabla_seccion_bus">
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.id_predio</td>
                    <td>@f.predio</td>
                    <td>@f.calle</td>
                    <td>@f.colonia</td>
                    <td>@f.municipio</td>
                    <td style="text-align: center">
                        <button class="btn btn-secondary" type="button" id="btn_act" name="btn_act" onclick="location.href='../DestajoMaterial/Index_autorizar_predio?id_predio=@f.id_predio'"><span class="glyphicon glyphicon-eye-open"></span>  Ver destajos</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<br />

