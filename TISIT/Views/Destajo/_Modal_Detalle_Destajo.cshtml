

<div id="modal_detalle_destajo" class="modal fade">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content" style="width:100%">
            <div class="modal-header">
                <h4 class="modal-title">Lista de trabajadores</h4>
            </div>
            <div class="modal-body" id="Grid">
                <table class="table table-bordered">
                    <thead style="background-color: dimgray; color:white">
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Paterno</th>
                            <th>Materno</th>
                            <th>Categoria</th>
                            <th hidden>Pago día</th>
                            <th hidden>Días trabajados</th>
                            <th hidden>Deducciones</th>
                            <th hidden>Subtotal</th>
                            <th hidden>Extras</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="tabla_det_des"></tbody>
                </table>
                
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"> Cerrar</span></button>
            </div>
        </div>
    </div>
</div>

<script>
    detalle_destajo = function (codigo) {
        $.post(
            '/Destajo/detalle_destajo', {
            id_destajos_admin: codigo
        }, function (res) {
            $('#tabla_det_des').html(res)
        });
    };
</script>


